{
  "name": "simply-uuid",
  "version": "2.0.0",
  "description": "Simple UUID generation",
  "main": "index.js",
  "scripts": {
    "test": "ava test",
    "clean": "trash build/**/*",
    "build": "npm run clean && npm run build:node && npm run build:browser",
    "build:node": "babel src -d build --source-maps inline",
    "build:browser": "browserify src/index.js -t ./node_modules/babelify --outfile build/browser.js --require babel-polyfill"
  },
  "repository": {
    "type": "git",
    "url": "https://TylerGarlick@github.com/TylerGarlick/simple-uuid"
  },
  "keywords": [
    "uuid",
    "guid"
  ],
  "author": "Tyler Garlick <tjgarlick@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/TylerGarlick/simple-uuid/issues"
  },
  "homepage": "https://github.com/TylerGarlick/simple-uuid",
  "dependencies": {
    "babel-polyfill": "^6.23.0",
    "babel-preset-env": "^1.5.2"
  },
  "devDependencies": {
    "ava": "^0.19.1",
    "babel-cli": "^6.24.1",
    "babel-preset-pundits": "^2.0.3",
    "babel-register": "^6.24.1",
    "babelify": "^7.3.0",
    "browserify": "^14.4.0",
    "trash-cli": "^1.4.0"
  },
  "ava": {
    "files": [
      "test/**/*.test.js"
    ],
    "source": [
      "**/*.{js,jsx}",
      "!dist/**/*"
    ],
    "concurrency": 5,
    "failFast": true,
    "failWithoutAssertions": false,
    "tap": true,
    "powerAssert": false,
    "require": [
      "babel-polyfill",
      "babel-register"
    ],
    "babel": "inherit"
  },
  "transform": [
    [
      "babelify",
      {
        "comments": false,
        "sourceType": "module",
        "entry": true
      }
    ]
  ]
}
